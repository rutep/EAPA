@page
@model webApi.Pages.NewsModel

@{
    ViewData["Title"] = "grants";
}

<div class="container">
    @if (Model.Grant.Count > 0)
    {

        <div id="headingContainer">
            <div class="heading">
                <h1>News</h1>
            </div>
        </div>


        @foreach (var item in Model.Grant)
        {
            if (item.Image == "")
            {
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                        <p class="card-text">@Html.DisplayFor(modelItem => item.text)</p>
                    </div>
                </div>
            }
            else
            {
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title pads">@Html.DisplayFor(modelItem => item.Title)</h5>
                        <p class="card-text">
                            <img class="images card-image-top" style="float: left; padding: 10px;" src="~/images/grants/@Html.DisplayFor(modelItem => item.Image)" alt="Card image cap">
                            @Html.DisplayFor(modelItem => item.text)
                        </p>
                    </div>
                </div>
            }
        }
    }
    else
    {
        <div id="headingContainer">
            <div class="headin">
                <div>
                    <h1>No News</h1>
                </div>
            </div>
        </div>
    }
</div>
