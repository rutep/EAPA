@page
@model webApi.Pages.Grants.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Identity/Pages/Account/Admin/_Layout.cshtml";

}

<div class="card container" id="containerLayout" style="padding: 20px">
<h2 class="heading">Manage your Admin account</h2>
<div>
<hr />
<div class="row">
    <partial name="ANav" />
    <div class="col-md-9">
        <div class="row justify-content-center">

            <div>
                <h1 class="text-center" style="margin-top:20px; margin-bottom: 20px;">Change News</h1>
                @if (Model.Grant.Image == "")
                {

                }
                else
                {
                    <img src="~/images/grants/@Model.Grant.Image" style="padding:20px">
                }
            </div>
        </div>
        <div style="padding: 20px;">
                    <div class="card-body">
                        <form method="post" asp-controller="UploadFiles" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Grant.Id" />
                            <div class="form-group">
                                <label asp-for="Grant.Title" class="control-label"></label>
                                <input asp-for="Grant.Title" class="form-control" />
                                <span asp-validation-for="Grant.Title" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Text</label>
                                <textarea textarea asp-for="Grant.text" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                            </div>
                            <div class="form-group">
                                <input type="file" name="files" value="Grant.Image" multiple />
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                            <a class="btn btn-secondary" asp-page="./Index">Back to List</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
