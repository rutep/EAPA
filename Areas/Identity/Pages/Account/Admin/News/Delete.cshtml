@page
@model webApi.Pages.Grants.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Identity/Pages/Account/Admin/_Layout.cshtml";
}

<div class="card container" id="containerLayout" style="padding: 20px">
    <h2 class="heading">Manage your Admin account</h2>
    <div>
        <hr />
        <div class="row">
            <partial name="ANav" />
            <div class="col-md-9">
                <div class="row justify-content-center">

                    <div>
                        <h1 class="text-center" style="margin-top:20px; margin-bottom: 20px;">Delete</h1>
                        <p class="text-center">Are you sure you wan't to delete this?</p>
                        @if (Model.Grant.Image == "")
                        {

                        }
                        else
                        {
                            <img src="~/images/grants/@Model.Grant.Image" style="padding:20px">
                        }
                    </div>
                </div>
                <div style="padding: 20px;">
                    <div class="card-body">
                        <p>Title</p>
                        <h5 class="card-title">@Model.Grant.Title</h5>
                        <p>Text</p>
                        <p class="card-text">@Model.Grant.text</p>
                        <form method="post">
                            <input type="hidden" asp-for="Grant.Id" />
                            <input type="submit" value="Delete" class="btn btn-primary" /> 
                            <a class="btn btn-secondary" asp-page="./Index">Back to List</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

