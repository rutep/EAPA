@page
@model webApi.Pages.Grants.IndexModel

@{
    ViewData["Title"] = "Index";
    ViewData["ActivePage"] = "Grants";
    Layout = "~/Areas/Identity/Pages/Account/Admin/_Layout.cshtml";
}
<div class="card" id="containerLayout" style="padding: 20px">
    <h2 class="heading">Manage your Admin account</h2>
    <div>
        <hr />
        <div class="row">
            <partial name="ANav" />
            <div class="col-md-9 center">
                <div class="row justify-content-center">

                    <h2 class="heading"><a asp-page="Create">Publish News</a></h2>

                    @if (Model.Grant.Count > 0)
                    {


                        <table class="table">
                            <thead class="text-light" style="background:black; ">
                                <tr>
                                    <th scope="col"> @Html.DisplayNameFor(model => model.Grant[0].Title) </th>
                                    <th scope="col"> @Html.DisplayNameFor(model => model.Grant[0].Image) </th>
                                    <th scope="col">  </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Grant)
                                {
                                    <tr>
                                        <td> @Html.DisplayFor(modelItem => item.Title) </td>
                                        <td> @Html.DisplayFor(modelItem => item.Image) </td>
                                        <td>
                                            <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                                            <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                                            <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
    </div>