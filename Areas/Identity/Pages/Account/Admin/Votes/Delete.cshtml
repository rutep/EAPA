@page
@model webApi.Pages.Votes.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Identity/Pages/Account/Admin/_Layout.cshtml";
}


<div class="cont">
    <div class="container">
        <div>
            <h1>Delete Event</h1>
            <h3>Are you sure you want to delete this?</h3>
        </div>
    </div>
</div>


<div class="cart container">
    <div class="card mb-3" style="width: 36rem;">
        <img class="card-img-top" src="~/images/events/@Model.Vote.Image" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">@Model.Vote.Title</h5>
            <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
            <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
            <form method="post">
                <input type="hidden" asp-for="Vote.Id" />
                <input type="submit" value="Delete" class="btn btn-default" /> |
                <a asp-page="./Index">Back to List</a>
            </form>
        </div>
    </div>
</div>

