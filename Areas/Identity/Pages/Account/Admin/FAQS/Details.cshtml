@page
@model webApi.Areas.Identity.Pages.Account.Admin.FAQS.DetailsModel

@{
    ViewData["Title"] = "Details";
}
<div class="card container" id="containerLayout" style="padding: 20px">
    <h2 class="heading">Manage your Admin account</h2>
    <div>
        <hr />
        <div class="row">
            <partial name="ANav" />
            <div class="col-md-9">
                <div class="row justify-content-center">

                    <div>
                        <h1 class="text-center" style="margin-top:20px; margin-bottom: 20px;">Details</h1>
                    </div>
                </div>
                <div style="padding: 20px;">
                    <div class="card-body">
                        <p>Question</p>
                        <h5 class="card-title">@Model.FAQ.questions</h5>
                        <p>Answer</p>
                        <p class="card-text">@Model.FAQ.answers</p>
                        <br />
                        <br />
                        <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@Model.FAQ.Id">Edit</a>
                        <a class="btn btn-primary" asp-page="./Delete" asp-route-id="@Model.FAQ.Id">Delete</a>
                        <a class="btn btn-secondary" asp-page="./Index">Back to List</a>
                        
                    </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
