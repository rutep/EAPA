@page
@model webApi.Areas.Identity.Pages.Account.Admin.FAQS.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="card container" id="containerLayout" style="padding: 20px">
    <h2 class="heading">Manage your Admin account</h2>
    <div>
        <hr />
        <div class="row">
            <partial name="ANav" />
            <div class="col-md-9 center">
                <div class="row justify-content-center">

                    <h2 class="heading"><a asp-page="Create">Create New Answer</a></h2>

                    @if (Model.FAQ.Count > 0)
                    {


                        <table class="table">
                            <thead class="text-light" style="background:black; ">
                                <tr>
                                    <th scope="col"> @Html.DisplayNameFor(model => model.FAQ[0].questions) </th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.FAQ)
                                {
                                    <tr>
                                        <td> @Html.DisplayFor(modelItem => item.questions) </td>
                                        <td>
                                            <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                                            <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                                            <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</div>