@page
@model webApi.Pages.Events.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Identity/Pages/Account/Admin/_Layout.cshtml";
}
<div class="container" id="containerLayout">

    <h2>Manage your Admin account</h2>
    <div>
        <h4>Change your Admin settings</h4>
        <hr />
        <div class="row">
            <div class="col-md-3">
                <div class="list-group">
                    <a class="list-group-item list-group-item-action" href="/Identity/Account/Admin/ChangePassword">Password</a>
                    <a class="list-group-item list-group-item-action" href="/Identity/Account/Admin/ManageUsers">Manage Users</a>
                    <a class="list-group-item list-group-item-action active" href="/Identity/Account/Admin/Events/Index">Edit Events</a>
                    <a class="list-group-item list-group-item-action" href="/Identity/Account/Admin/Grants/Index">Edit News</a>
                    <a class="list-group-item list-group-item-action" href="/Identity/Account/Admin/Boardmember/Index">Edit Boardmembers</a>
                    <a class="list-group-item list-group-item-action" href="/Identity/Account/Admin/Votes/Index">Elections</a>
                </div>
            </div>
            <div class="col-md-9">
                <div class="cont">
                    <div class="container">
                        <div>
                            <h1>Create Event</h1>
                        </div>
                    </div>
                </div>

                <div class="cart container">
                    <div class="row">
                        <div class="col-md-12">
                            <form method="post" asp-controller="UploadFiles" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="Event.Title" class="control-label"></label>
                                    <input asp-for="Event.Title" class="form-control" />
                                    <span asp-validation-for="Event.Title" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Event.text" class="control-label"></label>
                                    <input type="text" asp-for="Event.text" class="form-control" />
                                    <span asp-validation-for="Event.text" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Event.eventLink" class="control-label"></label>
                                    <input asp-for="Event.eventLink" class="form-control" />
                                    <span asp-validation-for="Event.eventLink" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Event.StartDate" class="control-label"></label>
                                    <input type="date" asp-for="Event.StartDate" class="form-control" />
                                    <span asp-validation-for="Event.StartDate" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Event.date" class="control-label"></label>
                                    <input type="date" asp-for="Event.date" class="form-control" />
                                    <span asp-validation-for="Event.date" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="file" name="files" multiple />
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Create" class="btn btn-default" />
                                </div>
                            </form>
                        </div>
                    </div>

                </div>


                <div>
                    <a asp-page="Index">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
