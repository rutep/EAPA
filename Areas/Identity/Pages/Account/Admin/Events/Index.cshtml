@page
@model webApi.Pages.Events.IndexModelEvent

@{
    ViewData["Title"] = "Events";
    ViewData["ActivePage"] = "Events";
    Layout = "~/Areas/Identity/Pages/Account/Admin/_Layout.cshtml";
}

<div class="cont">
    <div class="container">
        <div>
            <h1>Create Event</h1>
        </div>
    <p>
        <a asp-page="Create">Create New Event</a>
    </p>
    </div>
</div>


<div class="cart container">

    @foreach (var item in Model.Event)
    {

        <div class="card-size">
            <div class="card" style="width: 18rem;">
                <img class="images card-image-top" src="~/images/events/@Html.DisplayFor(modelItem => item.Image)" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title text-center">Title: @Html.DisplayFor(modelItem => item.Title)</h5>
                    <p class="card-text">Text: @Html.DisplayFor(modelItem => item.Title)  Lorem Ipsum.</p>
                    <p class="card-text">Register link: <a href="@Html.DisplayFor(modelItem => item.eventLink)"> @Html.DisplayFor(modelItem => item.eventLink)</a></p>
                    <p class="card-text">Starting date: @Html.DisplayFor(modelItem => item.StartDate)</p>
                    <p class="card-text">Ending date: @Html.DisplayFor(modelItem => item.date)</p>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </div>
            </div>
        </div>
    }
</div>
