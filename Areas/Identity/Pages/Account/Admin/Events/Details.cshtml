@page
@model webApi.Pages.Events.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Identity/Pages/Account/Admin/_Layout.cshtml";
}
<div class="card container" id="containerLayout" style="padding: 20px">
    <h2 class="heading">Manage your Admin account</h2>
    <div>
        <hr />
        <div class="row">
            <partial name="ANav" />
            <div class="col-md-9">
                <div class="row justify-content-center">

                    <div>
                        <h1 class="text-center" style="margin-top:20px; margin-bottom: 20px;">Details</h1>
                        @if (Model.Event.Image == "")
                        {

                        }
                        else
                        {
                            <img src="~/images/events/@Model.Event.Image" style="padding:20px">
                        }
                    </div>
                </div>
                <div style="padding: 20px;">
                    <div class="card-body">
                        <p>Title</p>
                        <h5 class="card-title">@Model.Event.Title</h5>
                        <p>Text</p>
                        <p class="card-text">@Model.Event.text</p>
                        <p>Link</p>
                        <a href="@Model.Event.eventLink">@Model.Event.eventLink</a> 
                        <br />
                        <br />
                        <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@Model.Event.Id">Edit</a>
                        <a class="btn btn-primary" asp-page="./Delete" asp-route-id="@Model.Event.Id">Delete</a>
                        <a class="btn btn-secondary" asp-page="./Index">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
